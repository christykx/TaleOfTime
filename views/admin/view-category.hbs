<section> 
    {{!-- style="background-image:url(https://thumbs.dreamstime.com/b/blue-green-yellow-gradient-background-watercolor-texture-abstract-artistic-grungy-web-design-backdrop-brochure-165710792.jpg); background-repeat: no-repeat; background-size: cover;"> --}}
<div class="container">
    <div class="col-md-12 text-right mt-4 "> 
 <table id="table_id" class="table mt-5 " >
  <thead style="color:black">
    <tr>
       <th scope="col">S.No.</th> 
      <th scope="col">Category</th>
      <th scope="col">Options</th>

  
    </tr>
  </thead>
  <tbody>
   {{#each categories}} 
    <tr>
       <td class="sno">1</td> 
      <td>{{this.category}}</td>

      {{!-- <td><a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a> --}}
    <td>
      
     <a href="/admin/edit-category/{{this._id}}" class="btn btn-primary">Edit</a>                     
     <a href="/admin/delete-category/{{this._id}}" class="btn btn-danger" onclick=" return confirm('Do you want to delete {{this.product_name}}? ')">Delete</a>                   
                     
      </td>
    </tr>   
   {{/each}}
   </tbody>
   </table>
   </div>
 </div>
</section> 




