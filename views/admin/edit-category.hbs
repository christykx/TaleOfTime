<html>
<head>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body>
<div class="container">
 <div class="col-md-12  mt-4" style="text-align: end;">
<a href ="/admin/view-category" class="btn btn-success ">Go Back</a>
</div>
</div>


<!-- Include the above in your HEAD tag -->
<div class="container">
<section>  
<form class="form-horizontal" method="post" action="/admin/edit-category/{{category._id}}" >
<fieldset>

<!-- Form Name -->
<legend>UPDATE CATEGORY</legend>
<hr>

        {{#if signupErr}}
        <p class="alert alert-danger">{{signupErr}}</p>
        {{/if}}
                  

<!-- Select Basic -->
<div class="form-group">
  <label class="col-md-4 control-label" for="category">ADD CATEGORY</label>
 <div class="col-md-4">
  <input id="category" name="category" placeholder="Category name" value="{{category.category}}" class="form-control input-md" required="" type="text">
    
  </div>
</div>

<br>


<!-- Button -->
<div class="form-group">

  <div class="col-md-4">
    <button  class="btn btn-primary" type="submit">Update</button>
  </div>
  </div>

</fieldset>
</form>
</section>
</div>
    </body>
</html>